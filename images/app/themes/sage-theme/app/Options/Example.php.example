<?php

namespace App\Options;

use Log1x\AcfComposer\Options as Field;
use StoutLogic\AcfBuilder\FieldsBuilder;

class Example extends Field
{
    /**
     * The option page menu name.
     *
     * @var string
     */
    public $name = 'Sample Settings';


    /**
     * The option page document title.
     *
     * @var string
     */
    public $title = 'Sample Menu Title';

    /**
     * The option page permission capability.
     *
     * @var string
     */
    public $capability = 'edit_posts';

    /**
     * Redirect to the first child page if one exists.
     *
     * @var boolean
     */
    public $redirect = false;

    /**
     * The option page menu icon.
     *
     * @var string
     */
    public $icon = 'dashicons-admin-generic';
    
    /**
     * The option page menu slug.
     *
     * @var string
     */
    // public $slug = 'products-main-page';

    /**
     * The slug of another admin page to be used as a parent.
     *
     * @var string
     */
    // public $parent = 'edit.php?post_type=our-products';

    /**
     * The option page field group.
     *
     * @return array
     */
    public function fields()
    {
        $Example = new FieldsBuilder('sample_settings');

        $Example
            ->addRepeater('items')
                ->addText('item')
            ->endRepeater();

        return $Example->build();
    }
}
