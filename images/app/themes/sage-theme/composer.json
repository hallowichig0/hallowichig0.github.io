{
  "name": "hallowichig0/sage-theme",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "Sage Theme Boilerplate for Wordpress",
  "homepage": "https://github.com/hallowichig0/sage-theme",
  "authors": [
    {
      "name": "Jayson Garcia",
      "email": "garciajayson502@gmail.com",
      "homepage": "https://hallowichig0.github.io"
    }
  ],
  "keywords": [
    "Sage",
    "Bootstrap",
    "ACF",
    "Kirki",
    "SASS",
    "Blade",
    "Wordpress"
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "php": "^7.4|^8.0",
    "garrettweinberg/sage-bootstrap5-navwalker": "^1.3",
    "log1x/acf-composer": "^2.0",
    "log1x/sage-directives": "^1.1",
    "log1x/sage-svg": "^1.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.7.1"
  },
  "suggest": {
    "log1x/sage-directives": "A collection of useful Blade directives for WordPress and Sage (^1.0).",
    "log1x/sage-svg": "A useful SVG directive for inlining SVG's within Blade views (^1.0)."
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": [
      "phpcs --extensions=php --standard=PSR12 app"
    ]
  },
  "extra": {
    "acorn": {
      "providers": [
        "App\\Providers\\ThemeServiceProvider"
      ]
    }
  }
}
